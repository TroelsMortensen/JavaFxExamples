<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FirstViewController">
   <children>
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="inputField" promptText="inputField" />
            <Button mnemonicParsing="false" onAction="#onPrintTextButtonPressed" text="Print Text" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#navigateToSecondView" text="To Second View" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
