<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefWidth="200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MyExampleController">
   <children>
      <VBox prefWidth="200.0" spacing="10.0">
         <children>
            <TextField fx:id="inputField" onKeyReleased="#onInputFieldKeyReleased" />
            <HBox>
               <children>
                  <Button fx:id="transferButton" mnemonicParsing="false" onAction="#onTransferButtonPressed" prefWidth="100.0" text="Transfer" />
                  <Button mnemonicParsing="false" onAction="#onClearButtonPressed" prefWidth="100.0" text="Clear" />
               </children>
            </HBox>
            <Label fx:id="outputLabel" alignment="CENTER" prefWidth="180.0" textAlignment="CENTER" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
